<!DOCTYPE html>
<html lang="cs-CZ">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
	<title>{ifset title}{include title|stripHtml} | {/ifset}BP</title>

	<link href="{$basePath}/assets/css/fontawesome/css/all.css" rel="stylesheet">
	<link rel="stylesheet" href="{$basePath}/assets/bootstrap/bootstrap.min.css">
	<link rel="stylesheet" href="{$basePath}/assets/bootstrap/sidebars.css">
	<link rel="stylesheet" href="{$basePath}/assets/css/custom.css">
</head>

<body>

	{foreach $flashes as $flash}
		<div class="alert alert-{$flash->type} alert-dismissible fade show flash-message flash-message-alert" role="alert">
			<div class="flash-message-text">
				{$flash->message}
			</div>
			<span type="button" class="close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></span>
		</div>
	{/foreach}

	{block body}
		{block content}

		{/block}
	{/block}

	{block modals}
	{/block}

	{block scripts}

	{/block}

	<script src="{$basePath}/assets/js/jquery-3.7.0.min.js"></script>
	<script src="{$basePath}/assets/bootstrap/bootstrap.bundle.min.js"></script>
	<script src="{$basePath}/assets/js/modals.js"></script>
	<script type="module" src="{$basePath}/assets/js/custom.js"></script>

</body>
</html>
